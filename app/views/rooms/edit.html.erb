<%= form_for @room, url: room_path(@room), method: :put do |f| %>
<div>
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>

<div>
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>

<div>
    <%= f.label :beds %>
    <%= f.text_area :beds %>
</div>

<div>
    <%= f.label :guests %>
    <%= f.text_area :guests %>
</div>

<div>
    <%= f.label :image_url %>
    <%= f.text_area :image_url %>
</div>

<div>
    <%= f.label :price_per_night %>
    <%= f.text_area :price_per_night %>
</div>

<div>
   <%= f.submit %>
</div>

<% end %>
